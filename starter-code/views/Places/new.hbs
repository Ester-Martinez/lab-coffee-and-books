<form action="/places/new" method="POST">
  <input type="text" name="name" placeholder="Place Name">
  Type: <select name="type" id="type">
    <option value="Coffee shop">Coffee shop</option>
    <option value="Bookstore">Bookstore</option>
  </select>
  <input type="number" name="latitude" placeholder="Latitude">
  <input type="number" name="longitude" placeholder="Longitude">
  <input type="submit" value="Create new place">
</form>

<ul>
  <li><a href="/">Home</a></li>
    <li><a href="/places/generalView">View all our places</a></li>
  <li><a href="/places/delete">Delete a place</a></li>
</ul>
{{#if message}}
<div class="error-message">{{message}}</div>
{{/if}}